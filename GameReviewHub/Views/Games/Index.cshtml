@using GameReviewHub.ViewModels.Game
@model IEnumerable<GameListItemViewModel>

@{
    ViewData["Title"] = "All Games";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No games available.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">

                    <img src="@game.ImagePath"
                         class="card-img-top"
                         style="height:240px; object-fit:cover;" />

                    <div class="card-body d-flex flex-column">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title fs-7 fw-bold">@game.Title</h5>

                            @if (game.AverageRating > 0)
                            {
                                <span class="badge bg-success fs-6">
                                    ⭐ @game.AverageRating.ToString("0.0") / 10
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    No reviews
                                </span>
                            }
                        </div>

                        <p class="card-text mt-2">@game.ShortDescription</p>

                        <div class="mt-auto d-flex gap-2 pt-3">
                            <a asp-controller="Games"
                               asp-action="Details"
                               asp-route-id="@game.Id"
                               class="btn btn-primary flex-fill fw-semibold">
                                Details
                            </a>

                            <a asp-controller="Reviews"
                               asp-action="ByGame"
                               asp-route-gameId="@game.Id"
                               class="btn btn-warning flex-fill fw-semibold">
                                💬 Reviews
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
