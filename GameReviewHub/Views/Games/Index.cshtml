@using GameReviewHub.ViewModels.Game
@model IEnumerable<GameListItemViewModel>

@{
    ViewData["Title"] = "All Games";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No games available.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm position-relative">

                    @if (game.AverageRating > 0)
                    {
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">
                            ⭐ @game.AverageRating.ToString("0.0") / 10
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary position-absolute top-0 end-0 m-2">
                            No reviews
                        </span>
                    }

                    <img src="@game.ImagePath"
                         class="card-img-top"
                         style="height:240px; object-fit:cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Title</h5>

                        <p class="card-text">@game.ShortDescription</p>

                        <a asp-controller="Games"
                           asp-action="Details"
                           asp-route-id="@game.Id"
                           class="btn btn-primary mt-2">
                            View Details
                        </a>

                        <a asp-controller="Reviews"
                           asp-action="ByGame"
                           asp-route-gameId="@game.Id"
                           class="btn btn-primary mt-2">
                            Reviews
                        </a>
                    </div>
                </div>
            </div>

        }
    </div>
}
