@model GameReviewHub.Models.ViewModels.Review.EditReviewViewModel

@{
    ViewData["Title"] = "Edit Review";
}

<h2 class="mb-3">Edit your review for @Model.GameTitle</h2>

<form asp-action="EditReview"
      asp-route-gameId="@Model.GameId"
      asp-route-reviewId="@Model.ReviewId"
      method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Body" class="form-label"></label>
        <textarea asp-for="Input.Body" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Input.Body" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Rating" class="form-label"></label>
        <input asp-for="Input.Rating" class="form-control" type="number" min="1" max="10" />
        <span asp-validation-for="Input.Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

    <a class="btn btn-secondary"
       asp-controller="Reviews"
       asp-action="ByGame"
       asp-route-gameId="@Model.GameId">
        Cancel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
