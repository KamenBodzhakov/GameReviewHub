@using GameReviewHub.Models
@model Game

@{
    ViewData["Title"] = $"{Model.Title} - Reviews";
}

<h2 class="mb-4">@Model.Title</h2>

@if (!Model.Reviews.Any())
{
    <div class="alert alert-info">
        There are no reviews for this game yet.
    </div>
}
else
{
    @foreach (var review in Model.Reviews
                .OrderByDescending(r => r.CreatedOn))
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">@review.Title</h5>
                    <span class="badge bg-success fs-6">
                        @review.Score / 10
                    </span>
                </div>

                <small class="text-muted">
                    Posted on @review.CreatedOn.ToString("yyyy-MM-dd")
                </small>

                <p class="mt-3 mb-0" style="white-space: pre-line;">
                    @review.Body
                </p>
            </div>
        </div>
    }
}

<div class="d-flex justify-content-between mt-4">
    <a class="btn btn-outline-primary"
       asp-controller="Games"
       asp-action="Index">
        ← Back to Games List
    </a>

    <a class="btn btn-success"
       asp-controller="Reviews"
       asp-action="CreateReview"
       asp-route-gameId="@Model.Id">
        + Add Review
    </a>
</div>


