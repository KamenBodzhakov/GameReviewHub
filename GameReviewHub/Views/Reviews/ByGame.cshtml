@model GameReviewHub.ViewModels.Review.GameReviewsViewModel

@using System.Security.Claims

@{
    string? currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

@{
    ViewData["Title"] = $"{Model.GameTitle} - Reviews";
}

<h2 class="mb-4">@Model.GameTitle</h2>

@if (!Model.Reviews.Any())
{
    <div class="alert alert-info">
        There are no reviews for this game yet.
    </div>
}
else
{
    @foreach (var review in Model.Reviews)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body d-flex flex-column">

                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="mb-0">@review.ReviewTitle</h5>

                    <span class="badge bg-success fs-6">
                        @review.Rating / 10
                    </span>
                </div>

                <small class="text-muted">
                    Posted by <strong>@review.AuthorUserName</strong>
                    on @review.CreatedOn.ToString("yyyy-MM-dd")
                </small>

                <p class="mt-3 mb-3" style="white-space: pre-line;">
                    @review.Body
                </p>

                @if (User.Identity?.IsAuthenticated == true && currentUserId == review.AuthorUserId)
                {
                    <div class="mt-auto text-end">
                        <a class="btn btn-outline-primary me-2"
                           asp-controller="Reviews"
                           asp-action="EditReview"
                           asp-route-gameId="@Model.GameId"
                           asp-route-reviewId="@review.ReviewId">
                            Edit
                        </a>

                        <a class="btn btn-outline-danger"
                           asp-controller="Reviews"
                           asp-action="DeleteReview"
                           asp-route-gameId="@Model.GameId"
                           asp-route-reviewId="@review.ReviewId">
                            Delete
                        </a>
                    </div>
                }

            </div>
        </div>

    }
}

<div class="d-flex justify-content-between align-items-center mt-4">
    <a class="btn btn-outline-primary"
       asp-controller="Games"
       asp-action="Index">
        ← Back to Games List
    </a>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <a class="btn btn-success"
           asp-controller="Reviews"
           asp-action="CreateReview"
           asp-route-gameId="@Model.GameId">
            + Add Review
        </a>
    }
    else
    {
        <div class="d-flex align-items-center gap-3">
            <span class="fw-bold text-danger">
                🔒 Log in to leave a review.
            </span>

            <a class="btn btn-warning fw-semibold px-3"
               asp-area="Identity"
               asp-page="/Account/Login"
               asp-route-returnUrl="@Url.Action("ByGame", "Reviews", new { gameId = Model.GameId })">
                Login
            </a>
        </div>
    }
</div>
